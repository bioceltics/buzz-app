{
  "buildCommand": "cd apps/website && npm install && npm run build",
  "outputDirectory": "apps/website/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "redirects": [
    { "source": "/business-login", "destination": "https://business.buzzee.ca/login", "permanent": false },
    { "source": "/business-register", "destination": "https://business.buzzee.ca/register", "permanent": false },
    { "source": "/business-dashboard", "destination": "https://business.buzzee.ca/dashboard", "permanent": false }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
